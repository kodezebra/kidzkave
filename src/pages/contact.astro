---
import Layout from "../layouts/Layout.astro";
import PageHeader from "../components/shared/PageHeader.astro";
import FeatureSection from "../components/shared/FeatureSection.astro";
import CallToAction from "../components/home/CallToAction.astro";
---

<Layout
  title="Contact Us | Kids Kave Junior School"
  description="Contact Kids Kave Junior School in Mukono to learn more about admissions, daycare, nursery, and primary education."
>
  <PageHeader
    title="Get in Touch"
    subtitle="We would love to hear from you. Reach out to schedule a visit, ask about admissions, or learn more about our programs."
  />

  <section class="py-16 sm:py-20">
    <FeatureSection>
      <div class="grid grid-cols-1 gap-x-8 gap-y-16 lg:grid-cols-2">
        <div class="space-y-8">
          <div>
            <h2 class="font-heading text-xl font-bold text-heading">Visit Our School</h2>
            <address class="mt-2 not-italic text-text-muted">
              Mukono, Namumira – along Katosi Road<br />
              (Approx. 10 mins from Mukono town)
            </address>
          </div>
          <div>
            <h2 class="font-heading text-xl font-bold text-heading">Call Us</h2>
            <div class="mt-2 text-text-muted">
              <a href="tel:+256784607792" class="hover:text-primary">+256 784 607 792</a><br />
              <a href="tel:+256752214450" class="hover:text-primary">+256 752 214 450</a>
            </div>
          </div>
          <div>
            <h2 class="font-heading text-xl font-bold text-heading">School Hours</h2>
            <p class="mt-2 text-text-muted">
              Monday – Friday: 7:00 AM – 5:00 PM
            </p>
          </div>
        </div>
        <div class="rounded-lg border border-border bg-bg-soft p-8">
          <h2 class="font-heading text-2xl font-bold text-heading">Send Us a Message</h2>
          <p class="mt-2 text-text-muted">
            For inquiries, you can also fill out the form below.
          </p>
          <!-- Contact Form Placeholder -->
          <form class="mt-6 space-y-4">
            <div>
              <label for="name" class="sr-only">Name</label>
              <input type="text" id="name" placeholder="Your Name" class="w-full rounded-md border-border bg-bg px-4 py-3" />
            </div>
            <div>
              <label for="email" class="sr-only">Email</label>
              <input type="email" id="email" placeholder="Your Email" class="w-full rounded-md border-border bg-bg px-4 py-3" />
            </div>
            <div>
              <label for="message" class="sr-only">Message</label>
              <textarea id="message" rows="4" placeholder="Your Message" class="w-full rounded-md border-border bg-bg px-4 py-3"></textarea>
            </div>
            <button type="submit" class="w-full rounded-md bg-primary px-6 py-3 text-sm font-semibold text-white hover:bg-primary/90">
              Send Message
            </button>
          </form>
        </div>
      </div>
    </FeatureSection>
  </section>
  <CallToAction />
</Layout>

