---
/* ================= ICON IMPORTS ================= */
import BadgeCheckIcon from "../../assets/icons/badge-check.svg"
import PhoneIcon from "../../assets/icons/phone.svg"
import CalendarIcon from "../../assets/icons/calendar.svg"
import CheckCircleIcon from "../../assets/icons/circle-check.svg"
import MapPinIcon from "../../assets/icons/map-pin.svg"

/* ================= IMAGE IMPORTS ================= */
import HeroImage from "../../assets/images/hero.jpg"
---

<section class="relative min-h-[65vh] flex items-center overflow-hidden">

  <!-- ================= Background ================= -->
  <div class="absolute inset-0">
    <img 
      src={HeroImage.src}
      alt="Happy school children learning in classroom"
      class="w-full h-full object-cover object-center"
      loading="lazy"
    />

    <!-- Dark overlay -->
    <div class="absolute inset-0 bg-black/55"></div>

    <!-- Soft brand gradient -->
    <div class="absolute inset-0 bg-gradient-to-b from-black/40 via-black/30 to-black/60"></div>
  </div>

  <!-- ================= Content ================= -->
  <div class="relative max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-16 sm:py-20 text-center text-white">

    <!-- ================= UNEB Badge ================= -->
    <div class="mb-6">
      <span class="inline-flex items-center px-5 py-2.5 rounded-full bg-white/95 backdrop-blur-sm text-primary font-bold text-sm shadow-md border border-primary/20">
        <BadgeCheckIcon class="w-5 h-5 mr-2" />
        FULLY UNEB REGISTERED • GOVERNMENT APPROVED
      </span>
    </div>

    <!-- ================= Headline ================= -->
    <h1 class="font-heading text-4xl sm:text-5xl lg:text-6xl font-extrabold tracking-tight text-white drop-shadow-[0_3px_12px_rgba(0,0,0,0.55)]">
  Kids Kave Junior School
</h1>

   <p class="uppercase mt-4 text-xl sm:text-2xl font-semibold tracking-wide text-secondary/90 drop-shadow-[0_2px_6px_rgba(0,0,0,0.45)]">
  To learn is to thrive
</p>

    <!-- ================= Age Groups ================= -->
    <div class="mt-6 flex flex-wrap items-center justify-center gap-4 text-white/90">
      <span class="inline-flex items-center gap-2">
        <span class="w-2.5 h-2.5 rounded-full bg-green-400"></span>
        Daycare (1–3 years)
      </span>
      <span class="hidden sm:inline text-white/40">•</span>
      <span class="inline-flex items-center gap-2">
        <span class="w-2.5 h-2.5 rounded-full bg-blue-400"></span>
        Nursery (3–5 years)
      </span>
      <span class="hidden sm:inline text-white/40">•</span>
      <span class="inline-flex items-center gap-2">
        <span class="w-2.5 h-2.5 rounded-full bg-purple-400"></span>
        Primary (6–12 years)
      </span>
    </div>

    <!-- ================= Actions ================= -->
    <div class="mt-10 grid grid-cols-1 sm:grid-cols-3 gap-4 max-w-2xl mx-auto">

      <!-- Call -->
      <a 
        href="tel:+256784607792"
        class="flex items-center gap-3 bg-white/90 text-primary rounded-xl px-4 py-3 font-bold hover:bg-white transition"
      >
        <span class="p-2 bg-primary/10 rounded-lg">
          <PhoneIcon class="w-5 h-5" />
        </span>
        <div class="text-left">
          <div class="text-sm">Call Now</div>
          <div class="text-xs font-normal">+256 784 607792</div>
        </div>
      </a>

      <!-- Tour -->
      <a 
        href="/contact"
        class="flex items-center gap-3 bg-primary text-white rounded-xl px-4 py-3 font-bold hover:bg-primary/90 transition"
      >
        <span class="p-2 bg-white/20 rounded-lg">
          <CalendarIcon class="w-5 h-5" />
        </span>
        <div class="text-left">
          <div class="text-sm">Schedule Tour</div>
          <div class="text-xs font-normal">Visit Campus</div>
        </div>
      </a>

      <!-- Enroll (Primary CTA) -->
      <a 
        href="/admissions"
        class="flex items-center gap-3 bg-accent text-primary rounded-xl px-4 py-3 font-bold hover:bg-accent/90 transition"
      >
        <span class="p-2 bg-white/20 rounded-lg">
          <CheckCircleIcon class="w-5 h-5" />
        </span>
        <div class="text-left">
          <div class="text-sm">Enroll Now</div>
          <div class="text-xs font-normal">2026 Admissions</div>
        </div>
      </a>

    </div>

    <!-- ================= Location ================= -->
    <div class="mt-10 pt-6 border-t border-white/20">
      <div class="flex items-center justify-center gap-2 text-sm text-white/90">
        <MapPinIcon class="w-4 h-4 text-secondary" />
        Mukono – Namumira, Katosi Road • 10 mins from town
      </div>
    </div>

  </div>
</section>
