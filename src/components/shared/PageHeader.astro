---
interface Props {
  title: string;
  subtitle?: string;
}

const { title, subtitle } = Astro.props;
---
<section class="border-b border-border bg-bg-soft py-16 sm:py-20">
  <div class="mx-auto max-w-2xl px-4 text-center sm:px-6 lg:px-8">
    <h1 class="font-heading text-4xl font-bold text-heading sm:text-5xl">
      {title}
    </h1>
    {subtitle && (
      <p class="mt-4 text-lg leading-8 text-text-muted">{subtitle}</p>
    )}
  </div>
</section>
