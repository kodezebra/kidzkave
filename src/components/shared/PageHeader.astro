---
// src/components/PageHeader.astro
import logoPath from '../../assets/logo.svg';

export interface Props {
    title: string;
    subtitle: string;
}

const { title, subtitle } = Astro.props;
---

<section class="border-b border-border bg-bg-soft py-16 sm:py-20 lg:py-24">
  <div class="mx-auto max-w-5xl px-4 sm:px-6 lg:px-8">

    <div class="grid grid-cols-1 md:grid-cols-[150px_1fr] items-center md:items-start gap-8 md:gap-12 text-center md:text-left">

      <img 
        src={logoPath.src} 
        alt="Company Logo" 
        class="w-32 h-auto justify-self-center md:justify-self-start opacity-15
    grayscale" 
        width={logoPath.width}
        height={logoPath.height}
      />

      <!-- The Text Content -->
      <div>
        <h1 class="font-heading text-4xl sm:text-5xl font-bold text-heading">
          {title}
        </h1>
        <p class="mt-4 text-lg text-text-muted">
          {subtitle}
        </p>
      </div>

    </div>
  </div>
</section>