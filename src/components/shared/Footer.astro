---
import { NAV_LINKS } from '../../utils/navigation';
import FacebookIcon from '../../assets/icons/facebook.svg?raw';
import InstagramIcon from '../../assets/icons/instagram.svg?raw';
import XIcon from '../../assets/icons/x.svg?raw';
import PhoneIcon from '../../assets/icons/phone.svg';
import WhatsappIcon from '../../assets/icons/whatsapp.svg';

const SOCIAL_LINKS = [
  { href: '#', icon: FacebookIcon, label: 'Facebook' },
  { href: 'https://instagram.com/kids.kave.nursery', icon: InstagramIcon, label: 'Instagram' },
  { href: '#', icon: XIcon, label: 'X' },
]
---
<footer class="border-t border-border bg-primary/15 text-heading">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-2 gap-8 py-16 md:grid-cols-4">
      <div class="col-span-2 md:col-span-1">
        <h3 class="font-heading text-lg font-bold text-heading">Kids Kave Junior School</h3>
        <p class="mt-2 text-sm text-text-muted">A place to learn, grow, and be inspired.</p>
      </div>
      <div>
        <h3 class="font-semibold text-heading">Quick Links</h3>
        <ul class="mt-4 space-y-2">
          {NAV_LINKS.map(link => (
            <li>
              <a href={link.href} class="text-sm text-text-muted hover:text-primary">{link.text}</a>
            </li>
          ))}
        </ul>
      </div>
      <div>
        <h3 class="font-semibold text-heading">Contact Us</h3>
        <address class="mt-4 space-y-2 not-italic text-sm text-text-muted">
          <p>Mukono, Namumira</p>
          <div class="flex items-center gap-2">
            <WhatsappIcon class="w-4 h-4 text-green-500" />
            <a href="tel:0786501757" class="hover:text-primary">0786501757</a>
          </div>
          <div class="flex items-center gap-2">
            <PhoneIcon class="w-4 h-4 text-primary" />
            <a href="tel:0756764701" class="hover:text-primary">0756 764 701</a>
          </div>
        </address>
      </div>
    </div>

  </div>
</footer>

