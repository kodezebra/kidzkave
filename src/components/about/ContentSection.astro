---
interface Props {
  title: string;
}
const { title } = Astro.props;
---
<section class="py-16 sm:py-20">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="mx-auto max-w-2xl lg:max-w-4xl">
      <h2 class="font-heading text-3xl font-bold text-heading">{title}</h2>
      <div class="prose prose-lg mt-6 text-text-muted max-w-none">
        <slot />
      </div>
    </div>
  </div>
</section>
